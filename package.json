{
	"name": "dvelop",
	"description": "Helps you make vidja games.",
	"copyright": "2013 - 2014",
	"authors": [ 
		"Colden Cullen",
		"Brandon Littell",
		"Eric Christenson",
		"Tyler Wozniak",
		"Sean Brennan",
		"Timothy Reynolds"
		],
	"dependencies": {
		"derelict-gl3": "~master",
		"derelict-fi": "~master",
		"dyaml": "~master"
	},
	"sourcePaths": [
		"source/"
	],
	"importPaths": [
		"source/",
		"third_party/DWinProgramming/WindowsAPI"
	],
	"configurations": [
		{
			"name": "windows",
			"platforms": [ "windows" ],
			"libs": [
				"phobos", "gdi32", "user32",
				"ole32", "kernel32", "user32", "comctl32", "comdlg32" 
			]
		},
		{
			"name": "osx",
			"platforms": [ "osx" ]
		}
	],
	"buildTypes": {
		"doc": {
			"buildOptions": [
				"syntaxOnly"
			],
			"dflags": [
				"-Dfdoc/__dummy.html",
				"-Xfdoc/doc.json"
			],
			"postBuildCommands": [
				"dub run ddox -- filter doc/doc.json filter --ex dyaml --ex yaml --ex ddox --ex vibe --ex derelict",
				"dub run ddox -- generate-html doc/doc.json doc/",
				"rm -f doc/__dummy.html"
			]
		}
	},
	"subPackages": [
		{
			"name": "bootstrapper",
			"targetName": "bootstrapper",
			"versions": [ "Bootstrapper" ],
			"sourcePaths": [ "source/bootstrapper" ],
			"importPaths": [ "source/bootstrapper" ],
			"mainSourceFile": "source/bootstrapper/bootstrapper.d"
		}
	]
}

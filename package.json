{
	"name": "dvelop",
	"description": "Helps you make vidja games.",
	"copyright": "Copyright Â© 2013",
	"authors": [ "Colden Cullen" ],
	"subPackages": [
		{
			"name": "engine",
			"importPaths": [ "source" ],
			"targetPath": "bin/",
			"targetName": "dvelop",
			"dependencies": {
				"derelict-gl3": "~master",
				"derelict-fi": "~master",
				"dyaml": "~master"
			},
			"importPaths": [
				"source/",
				"third_party/DWinProgramming/WindowsAPI"
			],
			"excludedSourceFiles": [ "source/bootstrapper/*" ],
			"configurations": [
				{
					"name": "windows",
					"targetType": "dynamicLibrary",
					"mainSourceFile": "source/app.d",
					"libs": [
						"gdi32", "user32",
						"ole32", "kernel32", "user32", "comctl32", "comdlg32" 
					]
				},
				{
					"name": "osx",
					"platforms": [ "osx" ],
					"targetType": "library",
					"mainSourceFile": "source/app.d"
				}
			],
			"mainSourceFile": "source/app.d"
		},
		{
			"name": "bootstrapper",
			"targetPath": "bin/",
			"targetName": "bootstrapper",
			"libs": [ "phobos" ],
			"versions": [ "Bootstrapper" ],
			"sourcePaths": [ "source/bootstrapper" ],
			"importPaths": [ "source/bootstrapper" ],
			"mainSourceFile": "source/bootstrapper/bootstrapper.d"
		}
	],
	"buildTypes": {
		"doc": {
			"buildOptions": [
				"syntaxOnly"
			],
			"dflags": [
				"-Dfdoc/__dummy.html", "-Xfdoc/doc.json"
			],
			"postBuildCommands": [
				"dub run ddox -- filter doc/doc.json filter --ex dyaml --ex yaml --ex ddox --ex vibe --ex derelict",
				"dub run ddox -- generate-html doc/doc.json doc/",
				"rm -f doc/__dummy.html doc/doc.json"
			]
		}
	}
}
